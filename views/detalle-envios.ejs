<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head') %>
        <link rel="stylesheet" href="/css/nav.css" />
        <link rel="stylesheet" href="/css/detalle-envios.css">
        <title>Detalle de envio</title>
</head>

<body>
    <header>
        <%- include("./partials/header.ejs") %>
    </header>
    <main>
        <!-- INICIA BARRA CARRITO -->
        <div class="main">
            <div class="ubica-barra">
                <div class="navegador">
                    <div class=""><a href="/cart" class="mis-compras">Mis Compras</a></div>
                    <div class=""><a href="/envio" class="envios">Envíos</a></div>
                    <div class=""><a href="/pago" class="pagos">Pagos</a></div>
                </div>
            </div>
            <!-- FINALIZA BARRA CARRITO -->
            <h3 class="product-carrito mb-20 pt-20 ml-20">Detalle de envío:</h3>
            <div class="container">
                <form class="mobile ml-20">
                    <div>
                        <div class="entre-linea ds-flex js-cont-b fx-wrap">
                            <div>
                                <input type="text" name="nombre"
                                    class="media-mobile p-lateral  border-radius height-25 sinborde"
                                    placeholder="Nombre">
                            </div>
                            <div>
                                <input type="text" name="apellido" class="p-lateral height-25 sinborde border-radius "
                                    placeholder="Apellido">
                            </div>
                        </div>
                        <div class="entre-linea ds-flex js-cont-b fx-wrap">
                            <div>
                                <input type="number" name="dni"
                                    class="media-mobile p-lateral  border-radius height-25 sinborde"
                                    placeholder="D.N.I.">
                            </div>
                            <div>
                                <input type="number" name="telefono" class="p-lateral border-radius height-25 sinborde "
                                    placeholder="Numero de teléfono">
                            </div>
                        </div>
                        <div class="entre-linea ds-flex js-cont-b fx-wrap">
                            <div>
                                <input type="text" name="direccion"
                                    class="media-mobile p-lateral border-radius height-25 sinborde"
                                    placeholder="Dirección">
                            </div>
                            <div>
                                <input type="text" name="direccion2" class="p-lateral border-radius height-25 sinborde "
                                    placeholder="Segunda Dirección">
                            </div>
                        </div>
                        <div class="entre-linea ds-flex js-cont-b fx-wrap">
                            <div>
                                <input type="text" name="ciudad"
                                    class="media-mobile p-lateral  border-radius height-25 sinborde"
                                    placeholder="Ciudad">
                            </div>
                            <div>
                                <input type="number" name="cod-postal"
                                    class=" p-lateral height-25 sinborde border-radius" placeholder="Código Postal">
                            </div>
                        </div>
                        <div class="entre-linea text-align">
                            <select name="provincias" class="sinborde height-25 border-radius mt-15">
                                <option selected disabled>Seleccione una Provincia...</option>

                                    <% 
                                    const provincias = ['Buenos Aires', 'Ciudad Autónoma de Buenos Aires', 'Catamarca', 'Chaco', 'Chubut', 'Córdoba', 'Corrientes', 'Entre Ríos', 'Formosa', 'Jujuy', 'La Pampa', 'La Rioja', 'Mendoza', 'Misiones', 'Neuquén', 'Río Negro', 'Salta', 'San Juan', 'San Luis', 'Santa Cruz', 'Santa Fe', 'Santiago del Estero', 'Tierra del Fuego', 'Tucumán'] 
                                    %> 

                                    <% for (const pcia of provincias){ %> 

                                    <option value="<%= pcia %>"><%= pcia %></option>
                                    <% } %> 
                            </select>
                        </div>
                    </div>

                    <div class="entre-linea ml-20">
                        <label for="observa" class="ds-block fx-wrap">Observaciones:</label>
                        <textarea class="sinborde fx-wrap textarea" name="observa" id="observa" cols="35" rows="5"></textarea>
                    </div>

                    <!-- Botones tipo de envio -->
                    <div class="boton-tablet ds-flex js-cont-b mb-20">
                        <div class="boton-border-check botones-envio mr-10 envio-gratis p-10 ds-flex fx-wrap fx-align-center text-align"
                        style="height:60px; width: 200px; background-color: white;">
                            <input type="radio" id="free" name="opcion-envio" value="1" checked style="width:20%">
                            <div style="width: 80%;">
                                <div>
                                    <label for="free">Envío gratis</label>
                                </div>
                                <div>
                                    <p class="text-envio ">De 2 - 5 días hábiles</p>
                                </div>
                            </div>
                        </div>
                        <div class="boton-border-check envio-priori p-10 ds-flex botones-envio fx-wrap fx-align-center text-align"
                            style="height:60px; width: 200px; background-color: white;">
                            <input type="radio" id="prioridad" name="opcion-envio" value="2" style="width: 20%;">
                            <div style="width: 80%;">
                                <div>
                                    <label for="prioridad">Envío prioritario</label>
                                </div>
                                <div>
                                    <p class="text-envio">24 hs. desde checkout</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="desktop fx-wrap fondo-carro">
                    <!--este llevar a la derecha-->
                    <div class="fx-dir-col">
                        <table class="border-collapse pb-10 product-selec">
                            <tr class="bk-title ft-color-title ft-weight ft-size-title text-align ft-mobile">
                                <!-- INICIO TITULOS -->
                                <td class="imagen-column align-self">Imagen</td>
                                <td class="producto">Producto</td>
                                <td class="precio ma-auto ">Precio</td>
                            </tr><!-- finaliza titulos -->
                            <article>
                                <!-- Inicio articulo -->
                                <tr class="bk-tabla line-bottom">
                                    <td class="text-align">
                                        <img class="height-width-img" src="/images/products/auriculares.jpg" alt="auriculares" />
                                    </td>
                                    <td>
                                        <p class="ft-size-text text-left pb-10 ft-weight articulo">Auriculares Xiaomi
                                        </p>
                                    </td>
                                    <td>
                                        <p class="ft-size-text ma-auto precio fx-wrap">$8796
                                        </p>
                                    </td>
                                </tr>
                            </article><!-- Fin articulo -->
                            <!-- Inicio articulo -->
                            <tr class="bk-tabla line-bottom">
                                <td class="text-align">
                                    <img class="height-width-img" src="/images/products/aire.jpg" alt="" />
                                </td>
                                <td>
                                    <p class="ft-size-text text-left pb-10 ft-weight articulo">
                                        Aire Acondicionado LG
                                    </p>
                                </td>
                                <td>
                                    <p class="ft-size-text ma-auto precio fx-wrap">$100218
                                    </p>
                                </td>
                            </tr>
                            </article><!-- Fin articulo -->
                            <!-- Inicio articulo -->
                            <tr class="bk-tabla line-bottom">
                                <td class="text-align">
                                    <img class="height-width-img" src="/images/products/plancha_atma.jpg" alt="" />
                                </td>
                                <td>
                                    <p class="ft-size-text text-left pb-10 ft-weight articulo">
                                        Plancha ATMA
                                    </p>
                                </td>
                                <td>
                                    <p class="ft-size-text ma-auto precio fx-wrap">$10218
                                    </p>
                                </td>
                            </tr>
                            </article><!-- Fin articulo -->
                        </table>
                        <!-- Inicio resumen -->
                        <div class="bk-resume mt-15">
                            <table class="resumen line-height ft-size-text ma-auto ">
                                <h4 class="title text-align pl-10 pb-10 pt-10">RESUMEN:</h4>
                                <div class="title ft-weight text-align pb-10">
                                    <label for="descuento">Ingrese código de descuento:</label>
                                </div>
                                <div class="cod-desc text-align pb-10">
                                    <input type="text" class="desc" name="descuento" id="descuento" />
                                </div>
                                <tr>
                                    <td class="">SUBTOTAL</td>
                                    <td class="text-right">$12345
                                    </td>
                                </tr>
                                <tr>
                                    <td class="line-total">ENVIO</td>
                                    <td class="line-total text-right">Gratis</td>
                                </tr>
                                <tr>
                                    <td class="ft-weight">TOTAL</td>
                                    <td class="ft-weight text text-right">
                                        123422
                                    </td>
                                </tr>
                            </table>

                            <div class="text-align fx-dir-col ds-block botones mb-20">
                                <a href="/pago"><button class="btn-acepta">Aceptar</button></a>
                                <a href="#"><button class="btn-cancela">Cancelar</button></a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <%- include("./partials/footer") %>
    </footer>
</body>

</html>